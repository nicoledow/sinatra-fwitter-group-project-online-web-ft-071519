"<%= @tweet.content %>" - <%= @author.username %>


<!-- edit tweet button -->
<form method="post" action="/tweets/<%=@tweet.id%>/edit">
  <input id="hidden" type="hidden" name="_method" value="get">
  <input type="submit" value="Edit Tweet">
</form>


<!-- delete tweet button: -->
<form method="post" action="/tweets/<%=@tweet.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Tweet">
</form>
